<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCuentoHadas.MainPage">

    <Grid BackgroundColor="#0D0118" RowDefinitions=".05*,.1*,.45*,.05*,.05*,.3*">
        <Label
           FontSize="16"
           HorizontalOptions="Center"
           Text="Fairy Tales"
           TextColor="White"
           VerticalOptions="Center"/>

        <Grid Grid.Row="1" Margin="25,10,25,10">
            <RoundRectangle
                CornerRadius="25"
                Fill="#311845"
                HeightRequest="45" />
            <SearchBar CancelButtonColor="White"
                       Placeholder="Search by name"
                       PlaceholderColor="#AC9DB9"
                       TextColor="White"
                       VerticalOptions="Center" />
        </Grid>

        <CarouselView 
            Grid.Row="2" 
            IndicatorView="indicatorView"
            ItemsSource="{Binding FairyTales}"
            PeekAreaInsets="30">
            <CarouselView.ItemsLayout>
                <LinearItemsLayout
                    ItemSpacing="0"
                    Orientation="Horizontal"
                    SnapPointsAlignment="Center"
                    SnapPointsType="MandatorySingle" />
            </CarouselView.ItemsLayout>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border
                            Grid.RowSpan="3"
                            BackgroundColor="#311845"
                            HeightRequest="300"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="2"
                            WidthRequest="300">
                            <Border.Shadow>
                                <Shadow
                                    Brush="#C283FD"
                                    Opacity=".7"
                                    Radius="100"
                                    Offset="0,0" />
                            </Border.Shadow>
                        </Border>
                        <Grid RowDefinitions=".2*,.6*,.2*">
                            <Image 
                                Grid.RowSpan="3"
                                Aspect="AspectFill"
                                Source="{Binding Image}" />
                            <RoundRectangle
                                Grid.RowSpan="3"
                                CornerRadius="30"
                                HeightRequest="300"
                                WidthRequest="300"
                                Opacity=".7">
                                <RoundRectangle.Fill>
                                    <LinearGradientBrush EndPoint="0,1">
                                        <GradientStop Offset="0" Color="Transparent" />
                                        <GradientStop Offset="1" Color="#030005" />
                                    </LinearGradientBrush>
                                </RoundRectangle.Fill>
                            </RoundRectangle>
                            <VerticalStackLayout Grid.Row="2" Margin="20,0,0,0">
                                <Label 
                                    Text="{Binding ReadTime, StringFormat='ReadTime: {0:%m} mins' }"
                                    FontSize="Large"
                                    TextColor="White" />
                            </VerticalStackLayout>
                            <Label
                                Margin="0,20,20,0"
                                FontFamily="Icons"
                                FontSize="25"
                                HorizontalOptions="End"
                                Text="&#xF097;"
                                TextColor="White" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <IndicatorView
            x:Name="indicatorView"
            Grid.Row="3"
            HorizontalOptions="Center"
            IndicatorColor="#616161"
            IndicatorSize="8"
            SelectedIndicatorColor="White"
            VerticalOptions="Center" />

        <Label Grid.Row="4"
               Margin="25,10,25,10"
               FontSize="16"
               Text="Recommended for you"
               TextColor="White"
               VerticalOptions="Center" />

        <CollectionView Grid.Row="5" ItemsSource="{Binding FairyTales2}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="25" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid HeightRequest="200" WidthRequest="200">
                        <Border
                            HeightRequest="200"
                            HorizontalOptions="Center"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 20,20,20,20"
                            StrokeThickness="2">
                            <Image Aspect="AspectFill" Source="{Binding Image}" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="5"
              Margin="15,0,15,0"
              HeightRequest="75"
              VerticalOptions="End">
            <Border BackgroundColor="#311b45"
                    Stroke="#6E557C"
                    StrokeShape="RoundRectangle 30,30,30,30"
                    StrokeThickness="2">
                <Grid ColumnDefinitions="*,*,*,*"
                      RowDefinitions="*,*" RowSpacing="3">
                    <Label
                        Grid.Row="1"
                        FontSize="10"
                        HorizontalOptions="Center"
                        Text="Home"
                        TextColor="White" />
                    <Label
                        Grid.Column="1"
                        Grid.Row="1"
                        FontSize="10"
                        HorizontalOptions="Center"
                        Text="Search"
                        TextColor="White" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        FontSize="10"
                        HorizontalOptions="Center"
                        Text="Library"
                        TextColor="White" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="3"
                        FontSize="10"
                        HorizontalOptions="Center"
                        Text="Profile"
                        TextColor="#AC9DB9" />
                    <Label
                        FontFamily="Icons"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="&#xE80D;"
                        TextColor="#AC9DB9"
                        VerticalOptions="End"/>
                    <Label
                        FontFamily="Icons"
                        FontSize="20"
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalOptions="Center"
                        Text="&#xE823;"
                        TextColor="#AC9DB9"
                        VerticalOptions="End"/>
                    <Label
                        FontFamily="Icons"
                        FontSize="20"
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        Text="&#xE801;"
                        TextColor="#AC9DB9"
                        VerticalOptions="End"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>

